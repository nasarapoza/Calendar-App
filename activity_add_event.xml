    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start Date"
        android:id="@+id/textView7"
        android:layout_below="@+id/locEdit"
        android:textColor="@color/toolbar_text"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/startEdit"
        android:layout_below="@+id/textView7"
        android:textColor="@color/toolbar_text"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toRightOf="@+id/button_SD"
        android:layout_toLeftOf="@+id/button_SD"
        android:layout_toStartOf="@+id/button_SD" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:text="Date"
        android:id="@+id/button_SD"
        android:backgroundTint="#006daf"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End Date"
        android:id="@+id/textView8"
        android:layout_margin="10dp"
        android:layout_below="@+id/startEdit"
        android:textColor="@color/toolbar_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/endEdit"
        android:layout_below="@+id/textView8"
        android:textColor="@color/toolbar_text"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button_ED"
        android:layout_toStartOf="@+id/button_ED" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:text="Date"
        android:id="@+id/button_ED"
        android:backgroundTint="#006daf"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:button="@+drawable/btn_check_holo_light"
        android:id="@+id/group_event_check"
        android:onClick="onCheckboxClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is this a group event?"
        android:layout_below="@+id/endEdit"
        android:textColor="@color/toolbar_text"
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Email (if group)"
        android:layout_margin="10dp"
        android:id="@+id/textViewGroup"
        android:layout_below="@+id/group_event_check"
        android:textColor="@color/toolbar_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/editTextEmail"
        android:textColor="@color/toolbar_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:layout_below="@+id/textViewGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Duration"
        android:layout_margin="10dp"
        android:id="@+id/duration"
        android:layout_below="@+id/editTextEmail"
        android:textColor="@color/toolbar_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/editDuration"
        android:textColor="@color/toolbar_text"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:layout_below="@+id/duration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/duration"
        android:layout_alignEnd="@+id/duration" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="minutes"
        android:layout_margin="10dp"
        android:id="@+id/minutes"
        android:layout_below="@+id/duration"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@+id/editDuration" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Event"
        android:id="@+id/addButton"
        android:layout_alignParentRight="true"
        android:backgroundTint="#006daf"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true" />

    <!--<Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Group Event"
        android:id="@+id/groupButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/titleText"
        android:layout_toEndOf="@+id/titleText" />-->
</RelativeLayout>

